#loading-box
  style.
    /* 1. 容器样式：全屏遮罩 */
    #loading-box {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background-color: #1f1f1f; /* 深灰色背景，保护眼睛 */
      z-index: 9999;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      transition: opacity 0.6s ease-out; /* 消失时的渐变动画 */
    }
    
    /* 2. 动画核心：量子旋转环 */
    .loader-circle {
      position: relative;
      width: 80px;
      height: 80px;
      border-radius: 50%;
      border: 3px solid rgba(255, 255, 255, 0.1);
      border-top-color: #49b1f5; /* 主题蓝 */
      border-bottom-color: #9c27b0; /* 炫彩紫 */
      animation: spin 1.5s linear infinite;
    }
    
    /* 内层反向旋转 */
    .loader-circle::before {
      content: "";
      position: absolute;
      top: 5px;
      left: 5px;
      right: 5px;
      bottom: 5px;
      border-radius: 50%;
      border: 3px solid transparent;
      border-left-color: #ff5050; /* 活力红 */
      border-right-color: #ffc107; /* 明亮黄 */
      animation: spin-reverse 2s linear infinite;
    }
    
    /* 中心发光点 */
    .loader-circle::after {
      content: "";
      position: absolute;
      top: 28px;
      left: 28px;
      width: 24px;
      height: 24px;
      background: #fff;
      border-radius: 50%;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
      animation: pulse 1s ease-in-out infinite alternate;
    }
    
    /* 3. 文字样式 */
    .loader-text {
      margin-top: 20px;
      color: #eee;
      font-size: 14px;
      letter-spacing: 2px;
      font-family: 'Consolas', monospace; /* 代码字体 */
      animation: text-blink 1.5s infinite;
    }

    /* 4. 定义动画帧 */
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    @keyframes spin-reverse {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(-360deg); }
    }
    
    @keyframes pulse {
      0% { transform: scale(0.8); opacity: 0.8; }
      100% { transform: scale(1.1); opacity: 1; box-shadow: 0 0 30px rgba(255, 255, 255, 0.8); }
    }

    @keyframes text-blink {
      0%, 100% { opacity: 0.5; }
      50% { opacity: 1; }
    }
    
    /* 5. 消失类 (JS添加) */
    .loaded .loader-circle, 
    .loaded .loader-text {
      display: none; /* 消失时隐藏内容 */
    }

  //- HTML 结构
  .loader-circle
  .loader-text LOADING...

  //- JS 逻辑：页面加载完成后消失
  script.
    (function () {
      const loadingBox = document.getElementById('loading-box');
      
      // 监听页面加载完成事件
      window.addEventListener('load', function() {
        // 稍微延迟一点点，防止闪烁
        setTimeout(function() {
          loadingBox.style.opacity = '0'; // 渐隐
          // 动画结束后移除元素
          setTimeout(function() {
            if (loadingBox.parentNode) {
              loadingBox.parentNode.removeChild(loadingBox);
            }
          }, 600);
        }, 300); 
      });
      
      // 针对 Pjax 的适配 (如果你开启了Pjax)
      document.addEventListener('pjax:send', function () {
        // Pjax跳转开始时可以不显示，或者显示一个简单的进度条，
        // 这里为了体验通常不建议全屏loading再次出现，除非网络很慢。
      });
    })()